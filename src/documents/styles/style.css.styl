@charset "UTF-8";

body 
    background-color: rgb(251, 250, 218)
    font-family: Georgia, "Times New Roman", Times, serif  
    margin: 0 auto

/* Header */
.logo
    display: block
    margin-left: auto
    margin-right: auto
    margin-top: 0px
    margin-bottom: 15px
    
/* Tags */

h1
    color: rgb(255, 25, 104)
    text-align: center
    margin-bottom: auto
    font-size: 1.5em
    
h2.title
    color: rgb(255, 25, 104)
    font-size: 1.25em
    //padding-top: auto
    //margin-top: 2em
    //margin-bottom: 1em

h2
    text-align: center
    font-size: 1.17em

h3    
    font-size: 1em

.news-title
    padding-top: 0.5em
    padding-top: 0em
    //color: rgb(255, 25, 104)
    line-height: 1em

.news-date
    line-height: 0em
    padding-bottom: 1em

.news-info
    padding-left: 2em    

/* Publication, Board of Directors */

.board table
    margin: 0px auto;

/*.board tr*/
tr
    vertical-align: top

.publication-entry, .board
    border-color: #AAAAAA
    border-width: 1px
    //border-style: solid
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    padding: 1em 1em 1em 1em
    margin: auto

/* Hack! */
.publication td
    min-width: 150px

.publication img    
    margin-right: 1em

.publication-title
    font-style: italic

/* A centered list. Usually of links. */
.centered
    padding: auto
    margin-bottom: 1em

.centered p, .centered *
    text-align: center
    text-indent: 0em

.centered h3
    margin-bottom: 0px

.centered > a
    display: block    

img.centered
    margin-left: auto
    margin-right: auto

/* Google Search */
.search
    line-height: 1em

ul
    margin 0;

li p
    margin 0;
