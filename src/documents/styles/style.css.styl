@charset "UTF-8";

body 
    background-color: rgb(251, 250, 218)
    font-family: Georgia, "Times New Roman", Times, serif  
    margin: 0 auto

/* Header */
.logo
    display: block
    margin-left: auto
    margin-right: auto
    margin-top: 0px
    margin-bottom: 15px
    
/* Tags */

h1
    color: rgb(255, 25, 104)
    text-align: center
    margin-bottom: auto
    
h2.title
    color: rgb(255, 25, 104)
    //padding-top: auto
    //margin-top: 2em
    //margin-bottom: 1em

h2
    text-align: center

.news-title
    padding-top: 0.5em
    color: rgb(255, 25, 104)
    line-height: 0em

.news-date
    line-height: 0em
    padding-bottom: 1em

.news-info
    padding-left: 2em    

/* Publication, Board of Directors */

.board table
    margin: 0px auto;

/*.board tr*/
tr
    vertical-align: top

.publication-entry, .board
    border-color: #AAAAAA
    border-width: 1px
    border-style: solid
    padding: 1em 1em 1em 1em
    margin: auto

/* Hack! */
.publication td
    min-width: 150px

.publication img    
    margin-right: 1em

.publication-title
    font-style: italic

/* Pagination */

div.pagination ul
    list-style: none    
    display: block
    border-style: none
    margin: auto
    
div.pagination ul li
    float: left    
    display: block
    margin: 2px 0px 0px 2px

/* A centered list. Usually of links. */
.centered-list
    padding: auto
    margin-bottom: 2em

.centered-list *
    text-align: center
    text-indent: 0em

.centered-list > a
    display: block    

.centered-list h3
    margin-bottom: 0px
    text-align: center

/* Google Search */
.search
    line-height: 1em